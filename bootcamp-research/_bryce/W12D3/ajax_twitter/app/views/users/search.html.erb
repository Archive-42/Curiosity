<h1>Search!</h1>


<nav class="users-search">
  <input type="text" class="user-name" name="username">
  <ul class="users"></ul>
</nav>


<% if false %>
  <form action="/users/search" method="GET">
    <input
      type="text"
      name="query"
      value="<%= @query %>">

    <input type="submit" value="Search Users!">
  </form>
<% end %>

<ul>
  <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>
