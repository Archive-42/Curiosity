<h1><%= @cat.name %></h1>

<table>
  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
</table>

<% if @cat.owner == current_user %>
<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>
<% else %>
<a href="<%= new_cat_rental_request_url %>">Rent a Cat!</a>
<% end %>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Requested By</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>
