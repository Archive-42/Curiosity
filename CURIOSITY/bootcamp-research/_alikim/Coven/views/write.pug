extends layout.pug

include includes/utils.pug

block content
  script(defer type="module" src="/js/create.js")
  //- link(rel='stylesheet' type='text/css' href='/styles/create.css')
  
  h2 Publish an Article
  
  form(class="create-story-form" method='post')
    input(type='hidden' name='_csrf' value=csrfToken)
    label Title
      input(name='title' type=text placeholder='Title')
    label Body
      textarea(name="body" placeholder="Tell your story...")
    
    section
      h3 Add Topics (up to five)
      each topic in topics
        button.tpc-btn= topic.topic
    
    button Publish
