    name = "test_lib",
    testonly = True,
    srcs = glob(
        [
            "**/*.ts",
        ],
    ),
    tags = [
        "ivy-only",
    ],
    deps = [
        "//packages/compiler-cli/integrationtest/bazel/injector_def/ivy_build/app",
        "//packages/core",
        "//packages/private/testing",
    ],
