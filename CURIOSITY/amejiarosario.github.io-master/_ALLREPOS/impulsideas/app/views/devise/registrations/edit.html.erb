<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: 'form-signin mg-btm' }) do |f| %>

  <h3 class="heading-desc">Editar Cuenta</h3>

  <%#= f.error_notification %>
  <%= error_messages_for(resource) %>

  <br>

  <div class="main">
    <span class="clearfix"></span>
    <%= f.input :name, label: 'Nombre', :autofocus => true, input_html: {class: 'form-control'}  %>
    <%= f.input :email, label: 'Email', :required => true, :autofocus => true, input_html: {class: 'form-control'}  %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando por confirmaci칩n: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: 'Contrase침a', :autocomplete => "off", :required => false, input_html: {class: 'form-control', placeholder: 'Dejelo en blanco si no desea cambiarla', :autocomplete => "off"} %>

    <%= f.input :password_confirmation, label: 'Confirmar Contrase침a',  :required => false, input_html: {class: 'form-control', :autocomplete => "off"} %>

    <!-- <%#= f.input :current_password, label: 'Contrase침a actual', :hint => "Necesita confirmar su clave actual o puede vincularlo a una red social", :required => true, input_html: {class: 'form-control'} %> -->

    <% if resource.uid.blank? %>
      <hr>
      <h4>Redes Sociales:</h4>
      <%= render 'devise/shared/social_links', prefix: 'Vincular a' %>
    <% else %>
    <% end %>
  </div>

  <div class="login-footer">
    <div class="row">
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= f.button :submit, "Grabar", :class=>'btn btn-primary' %>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= link_to "Borrar", registration_path(resource_name), :data => { :confirm => "Esta seguro que quiere cancelar la cuenta? :(" }, :method => :delete, class: 'btn btn-danger' %>
      </div>
      <div class="col-xs-6 col-sm-4 col-md-4">
        <%= link_to "Cancelar", :back, :class=>'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>

