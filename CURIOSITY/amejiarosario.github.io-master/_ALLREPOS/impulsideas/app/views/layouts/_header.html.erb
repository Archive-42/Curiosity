<div class="navbar-wrapper">
  <div class="container">

    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, :class => 'navbar-brand' do %>
            <%= image_tag 'logo-bombillo.png', height: '20px' %>
            <%= image_tag 'logo.png', height: '20px' %>
          <% end %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= current_page?(items_path) ? 'active' : '' %>"><%= link_to items_path do %>
                <span class="fa fa-globe"></span> Marketplace
              <% end %>
            </li>
            <li class="<%= current_page?(projects_path) ? 'active' : '' %>"><%= link_to projects_path do %>
                <span class="fa fa-search"></span> Explora
              <% end %>
            </li>
            <li class="<%= current_page?(new_project_path) ? 'active' : '' %>">
              <%= link_to new_project_path do %>
                <span class="fa fa-cog"></span> Crea
              <% end %>
            </li>
            <!-- <li class="<%#= current_page?(about_path) ? 'active' : '' %>"><%#= link_to 'Conoce', about_path %></li> -->
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-no-turbolink="true"><span class="fa fa-user"></span> <%= current_user.emailname %><b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><%= link_to edit_user_registration_path do %>
                    <span class="fa fa-edit"></span> Editar cuenta
                  <% end %>
                  <li><%= link_to orders_path do %>
                    <span class="fa fa-money"></span> Ordenes
                  <% end %>
                  </li>
                  <li class="divider"></li>
                  <li><%= link_to destroy_user_session_path, :method=>'delete' do %>
                    <span class="fa fa-sign-out"></span> Salir
                  <% end %>
                  </li>
                </ul>
              </li>
            <% else %>
              <!--
              <li><%#= link_to new_user_session_path do %>
                <span class="fa fa-sign-in"> Ingresar
              <%# end %>
              </li>
              new_user_registration_path
              -->
              <li><%= link_to new_user_session_path do %>
                <span class="fa fa-user"></span> Registrarse
              <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
