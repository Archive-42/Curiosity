- model_class = @operation.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:numbers) + ':'
  %br
  = @operation.numbers
%p
  %strong= model_class.human_attribute_name(:operator) + ':'
  %br
  = @operation.operator
%p
  %strong= model_class.human_attribute_name(:align) + ':'
  %br
  = @operation.align

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), operations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_operation_path(@operation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), operation_path(@operation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
