    </if>

    <if k="route" v="bicycle;foot">
      <output k="footroute"    v="yes"/>
      <output k="bicycleroute" v="yes"/>
    </if>

    <if k="route" v="bicycle">
      <output k="bicycleroute" v="yes"/>
    </if>

