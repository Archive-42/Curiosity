  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "preLaunchTask": "compile",
      "program": "${workspaceRoot}/node_modules/.bin/_mocha",
      "args": [
        "dist/test",
        "--opts",
        "test/mocha.opts"
      ],
      "cwd": "${workspaceRoot}",
      "outFiles": [
        "${workspaceRoot}/dist/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}
