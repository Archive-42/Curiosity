{
  "framework": "qunit",
  "src_files": ["src/**/*"],
  "serve_files": ["index.js"],
  "disable_watching": true,
  "launch_in_ci": ["Chrome"],
  "browser_args": {
    "Chrome": [
      "--headless",
      "--disable-gpu",
      "--remote-debugging-port=9222",
      "--remote-debugging-address=0.0.0.0",
      "--no-sandbox",
      "--user-data-dir=/tmp"
    ]
  }
}